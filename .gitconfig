[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[credential]
	helper = /usr/share/git/credential/gnome-keyring/git-credential-gnome-keyring
[core]
	excludesfile = ~/.gitignore_global
	editor = vim
	quotepath = false
[push]
